{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      // Iliad
      "@iliad/*": ["@iliad/*"],
      "@iliad/hooks/*": ["@iliad/utils/hooks/*"],
      "@iliad/functions/*": ["@iliad/functions/hooks/*"]
      // Atlas
      // "@atlas/*": ["@atlas/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "custom.d.ts",

    // Type Declarations
    "@types/**/*.d.ts",
    "@types/**/*.ts",
    "@types/**/*",
    "@types/*.d.ts",
    "@types/*.ts",
    "@types/*",

    // Iliad Types
    "@iliad/@types/**/*.d.ts",
    "@iliad/@types/**/*.ts",
    "@iliad/@types/**/*",
    "@iliad/@types/*.d.ts",
    "@iliad/@types/*.ts",
    "@iliad/@types/*",

    // Atlas Types
    "@atlas/design-system/@types/**/*.d.ts",
    "@atlas/design-system/@types/**/*.ts",
    "@atlas/design-system/@types/**/*",
    "@atlas/design-system/@types/*.d.ts",
    "@atlas/design-system/@types/*.ts",
    "@atlas/design-system/@types/*",
    "components",
    "config",
    "context",
    "hooks",
    "icons",
    "types",
    "utils",
    "v2",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
